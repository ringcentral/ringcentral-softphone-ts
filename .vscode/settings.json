{
  "[javascript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode" // Use Prettier for JavaScript
  },
  "[javascriptreact]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode" // Use Prettier for React (JSX)
  },
  "[typescript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode" // Use Prettier for TypeScript
  },
  "[typescriptreact]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode" // Use Prettier for React (TSX)
  },
  "[json]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode" // Use Prettier for JSON
  },
  "[jsonc]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode" // Use Prettier for JSON with comments
  },
  "editor.formatOnSave": true, // Automatically format on save
  "eslint.validate": [
    "javascript",
    "javascriptreact",
    "typescript",
    "typescriptreact",
    "json",
    "jsonc"
  ],
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": "always" // Run ESLint auto-fix on save
  }
}
